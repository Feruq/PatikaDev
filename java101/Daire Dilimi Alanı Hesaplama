package Giris;

import java.util.Scanner;

public class DaireDilimiAlaniHesaplama06 {
    public static void main(String[] args) {
        int r, alfa;
        double pi = 3.14;

        Scanner input = new Scanner(System.in);
        System.out.print("Yari capi giriniz : ");
        r = input.nextInt();
        System.out.print("Alfa acisini giriniz : ");
        alfa = input.nextInt();

        double dilimAlani = (pi * r * r * alfa)/360;

        System.out.println("Daire Alani : " + dilimAlani);

    }
}
